@page
@model MarkanPizzeria.Pages.Checkout.CheckoutModel
@{
    var imageFile = $"{Model.ImageTitle}.png";
    var imagePath = Url.Content($"~/images/{imageFile}");
}
<h1>Your Order!</h1>

<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src="@imagePath" class="w-100" asp-append-version="true" alt="@Model.ImageTitle" />
        <p>Your order for the @Model.PizzaName Pizza is ready!</p>
        <p>Total price for your order is: @Model.PizzaPrice €</p>
        <a class="btn btn-primary mt-1 mx-auto" asp-page="ThankYou">Confirm Order</a>
    </div>
</div>
